{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["index.d.ts", "src/**/*"],
  "exclude": ["node_modules/**/*", "dist", ]
}
